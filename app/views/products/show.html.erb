<div id="showWell" class="well">
  <h2 style="text-align:center;"><font color="white">Species:</font> <font color="#FDDEBD"> <%= @product.name %></font></h2>
  <br>
  <p><font color="white">Move:</font> <%= @product.description %></p>       
  <p><font color="white">Price:</font> <%= number_to_currency(@product.price) %> poké (<%= @product.sale_message%>)</p>
  <p><font color="white">Tax:</font> <%= number_to_currency(@product.tax) %> poké</p>
  <p><font color="#40FC65">Total cost:</font> <%= number_to_currency(@product.total) %> poké</p>
  <p><font color="white">ID:</font> <%= @product.id %></p>
  <br>
  <%= form_tag "/products/#{@product.id}", method: :delete do %>
    <p style="text-align:center;"> <input type="submit" value="Delete me!"></p>
  <% end %>

</div>
