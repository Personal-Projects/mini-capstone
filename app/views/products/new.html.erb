<div id="showWell" class="well">

  <h2>Create a new Pokemon</h2>

  <%= form_tag "/products", method: :post do %>
    <div>
      <%= label_tag :name %>
      <%= text_field_tag :name %>
    </div>
    <br>
    <div>
      <%= label_tag :move %>
      <%= text_field_tag :description %>
    </div>
    <br>
    <div>
      <%= label_tag :price %>
      <%= text_field_tag :price %>
    </div>
    <br>
    <p><%= submit_tag "Create A Pokemon" %></p>

  <% end %>

</div>