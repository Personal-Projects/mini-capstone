<div id="showWell" class="well">
  <h2>Create a new Pokemon</h2>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_tag "/products", method: :post do %>
    <div>
      <%= label_tag :name %>
      <%= text_field_tag :name, @product.name %>
    </div>
    <br>
    <div>
      <%= label_tag :move %>
      <%= text_field_tag :description, @product.description %>
    </div>
    <br>
    <div>
      <%= label_tag :price %>
      <%= text_field_tag :price, @product.price %>
    </div>
    <br>
    <div>
      <%= label_tag :supplier_id %>
      <%= text_field_tag :supplier_id, @product.supplier_id %>
    </div>
    <br>
    <p><%= submit_tag "Create A Pokemon" %></p>

  <% end %>

</div>